// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Experience {
  id          String @id @default(uuid())
  title       String
  description String
  price       Float
  imageUrl    String
  slots       Slot[]
}

model Slot {
  id           String     @id @default(uuid())
  experienceId String
  experience   Experience @relation(fields: [experienceId], references: [id])
  dateTime     DateTime   @unique // Unique slot time per experience
  capacity     Int
  bookedCount  Int        @default(0) // Crucial for double-booking check
  bookings     Booking[]

  @@unique([experienceId, dateTime])
}

model Booking {
  id         String   @id @default(uuid())
  slotId     String
  slot       Slot     @relation(fields: [slotId], references: [id])
  userName   String
  userEmail  String // Minimal form validation required 
  promoCode  String?
  finalPrice Float
  bookedAt   DateTime @default(now())
}

model PromoCode {
  code      String  @id @unique
  discount  Float // e.g., 10 for 10% off, or 100 for a FLAT100
  isPercent Boolean
  isActive  Boolean @default(true)
}
